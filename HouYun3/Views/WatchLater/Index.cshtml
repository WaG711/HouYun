@model IEnumerable<Video>

<h2>Список видео "Смотреть позже"</h2>

@if (Model.Any())
{
    <div class="row">
        @foreach (var video in Model)
        {
            <div class="col-md-3 mb-3">
                <div class="card">
                    <a href="@Url.Action("Details", "Video", new { id = video.VideoId })">
                        <div class="card-body">
                            <h5 class="card-title">@video.Title</h5>
                            <p class="card-text">Uploaded by: @video.User.UserName</p>
                            <p class="card-text">Upload Date: @video.UploadDate.ToString("dd/MM/yyyy")</p>
                            <p class="card-text">Views: @video.Views.Count</p>
                            <video width="100%" controls>
                                <source src="@Url.Content($"~/videos/{video.FilePath}")" type="video/mp4">
                            </video>
                        </div>
                    </a>
                    <form asp-action="Delete" asp-route-id="@video.WatchLater.WatchLaterId" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Список "Смотреть позже" пуст.</p>
}