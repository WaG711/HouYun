@model HouYun3.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "Изменение пароля";
}
<form method="post" asp-controller="user" asp-action="ChangePassword">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div>
        <label asp-for="NewPassword"></label>
        <input asp-for="NewPassword" />
        <span asp-validation-for="NewPassword"></span>
    </div>

    <div>
        <label asp-for="OldPassword"></label>
        <input asp-for="OldPassword" />
        <span asp-validation-for="OldPassword"></span>
    </div>

    <div>
        <input type="submit" value="REG" />
    </div>

</form>