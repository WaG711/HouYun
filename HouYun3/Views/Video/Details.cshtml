@model VideoDetailsViewModel

@{
    ViewData["Title"] = "Video Details";
}

<div>
    <h2>@Model.Video.Title</h2>
    <p>@Model.Video.Description</p>
    <p>Uploaded by: @Model.Video.User.UserName</p>
    <p>Upload Date: @Model.Video.UploadDate.ToString("yyyy-MM-dd HH:mm:ss")</p>
    <video controls style="max-width: 100%;">
        <source src="@Url.Content("~/videos/" + Model.Video.FilePath)" type="video/mp4">
    </video>
    <p>Likes: @Model.LikesCount</p>
    <button id="likeButton" class="btn btn-primary" onclick="likeVideo()">Like</button>
    <div id="commentsSection">
        <h3>Comments</h3>
        @foreach (var comment in Model.Comments)
        {
            <div>
                <p>@comment.Text</p>
                <p>Posted by: @comment.User.UserName</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function likeVideo() {
            alert("Liked the video!");
        }
    </script>
}
