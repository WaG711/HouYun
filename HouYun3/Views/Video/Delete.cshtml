@model HouYun3.Models.Video

@{
    ViewData["Title"] = "Video Details";
}

<h2>Video Details</h2>

<div>
    <h4>@Model.Title</h4>
    <p>Description: @Model.Description</p>
    <p>Category: @Model.Category.Name</p>
    <p>User: @Model.User.Login</p>
    <p>Duration: @Model.DurationSeconds seconds</p>
    <p>Upload Date: @Model.UploadDate.ToString("MMMM dd, yyyy")</p>

    <video width="640" height="360" controls>
        <source src="@Model.FilePath" type="video/mp4">
        Your browser does not support the video tag.
    </video>
</div>
