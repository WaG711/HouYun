@model HouYun3.ViewModels.forVideo.VideoViewModel

@{
    ViewData["Title"] = "Video Index";
}

<div class="row mb-3">
    <div class="col-md-12">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/Video">Все</a>
                    </li>
                    @foreach (var category in Model.Categories)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Video?category=@category.Name">@category.Name</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </div>
</div>

<div class="row">
    @foreach (var video in Model.Videos)
    {
        <div class="col-md-3 mb-3">
            <div class="card">
                <a href="@Url.Action("Details", "Video", new { id = video.VideoId })">
                    <div class="card-body">
                        <h5 class="card-title">@video.Title</h5>
                        <p class="card-text">Uploaded by: @video.Channel.Name</p>
                        <p class="card-text">Upload Date: @video.UploadDate.ToString("dd/MM/yyyy")</p>
                        <p class="card-text">Views: @video.Views.Count</p>
                        <img src="@Url.Content("~/posters/" + video.PosterPath)" alt="Video Poster" style="max-width: 100%;">
                    </div>
                </a>
                <a href="@Url.Action("AddToWatchLater", "WatchLater", new { videoId = video.VideoId })" class="btn btn-primary">Добавить в "Смотреть позже"</a>
            </div>
        </div>
    }
</div>