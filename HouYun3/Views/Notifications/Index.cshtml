@model IEnumerable<Notification>

<h2>Notifications</h2>

@if (Model.Any())
{
    <ul>
        @foreach (var notification in Model)
        {
            <li>
                <strong>@notification.NotificationDate.ToString("dd/MM/yyyy HH:mm"):</strong> @notification.Message
            </li>
        }
    </ul>
}
else
{
    <p>No notifications found.</p>
}
