@model IEnumerable<WatchHistory>

@{
    ViewData["Title"] = "История просмотров";
}

<h1 style="font-size: 3em; font-weight: bold;">История просмотров</h1>

@if (Model.Any())
{
    <div class="container mt-4">
        <form method="post" asp-action="DeleteAllWatchHistory" asp-controller="WatchHistory" class="mt-3">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-light btn-sm">Delete All Watch History</button>
        </form>
        <div class="row">
            @foreach (var video in Model)
            {
                <div class="col-md-3">
                    <div class="card video-card">
                        <a href="@Url.Action("Details", "Video", new { videoId = video.VideoId })">
                            <img class="card-img-top poster-image" src="@Url.Content("~/posters/" + video.Video.PosterPath)" alt="Video Poster">
                        </a>
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="@Url.Action("Details", "Video", new { videoId = video.VideoId })">@video.Video.Title</a>
                            </h5>
                            <p class="card-text">
                                <a href="@Url.RouteUrl("channel", new { channelName = video.Channel.Name })">@video.Video.Channel.Name</a>
                            </p>
                            <p class="card-text">
                                <a href="@Url.Action("Details", "Video", new { videoId = video.VideoId })">@Helper.FormatViews(video.Video.Views.Count) | @Helper.TimeAgo(video.Video.UploadDate)</a>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <p>No watch history found.</p>
}