@model IEnumerable<Video>

@{
    ViewData["Title"] = "История просмотров";
}

@if (Model.Any())
{
    <h1 id="Title">История просмотров</h1>
    <p>
        <form method="post" asp-action="DeleteAllWatchHistory" asp-controller="WatchHistory" class="mt-3">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-light btn-sm">Очистить историю</button>
        </form>
    </p>

    <partial name="VideoCard" model="Model" />
}
else
{
    <h1 id="Title">У вас нет истории просмотров</h1>
}