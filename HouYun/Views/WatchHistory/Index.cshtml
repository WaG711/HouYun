@model IEnumerable<WatchHistory>

@{
    ViewData["Title"] = "История просмотров";
}

<h1 id="Title">История просмотров</h1>

@if (Model.Any())
{
    <p>
        <form method="post" asp-action="DeleteAllWatchHistory" asp-controller="WatchHistory" class="mt-3">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-light btn-sm">Очистить историю</button>
        </form>
    </p>
    <div class="container mt-4">
        <div class="row">
            @foreach (var video in Model)
            {
                <div class="col-md-3">
                    <div class="card video-card">
                        <a href="@Url.Action("Details", "Video", new { videoId = video.VideoId })">
                            <img class="card-img-top poster-image" src="@Url.Content("~/posters/" + video.Video.PosterPath)" alt="Video Poster">
                        </a>
                        <div class="card-body">
                            <h4 class="card-title d-flex justify-content-between">
                                <a href="@Url.Action("Details", "Video", new { videoId = video.VideoId })">@video.Video.Title</a>
                                <div class="dropdown">
                                    <button id="dropdownButton" onclick="toggleMenu('@video.VideoId')" class="btn btn-outline-secondary btn-sm" aria-haspopup="true" aria-expanded="false">
                                        ...
                                    </button>
                                    <div id="menuItems_@video.VideoId" class="dropdown-menu" style="display: none;">
                                        <a class="dropdown-item" href="@Url.Action("AddToWatchLater", "WatchLater", new { videoId = video.VideoId })">Смотреть позже</a>
                                    </div>
                                </div>
                            </h4>
                            <p class="card-text">
                                <a href="@Url.RouteUrl("channel", new { channelName = video.Channel.Name })">@video.Channel.Name</a>
                            </p>
                            <p class="card-text">
                                <a href="@Url.Action("Details", "Video", new { videoId = video.VideoId })">@Helper.FormatViews(video.Video.Views.Count) | @Helper.TimeAgo(video.Video.UploadDate)</a>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <p>No watch history found.</p>
}