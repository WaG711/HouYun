@model HouYun.ViewModels.forUser.LoginViewModel

@{
    Layout = null;
}

<body>
    <div class="Login">
        <h2>
            <img src="~/imges/LogoRL.png" style="width: 90px; height: 60px; margin-right: 5px;" />HouYun
        </h2>
        <div class="square-container">
            <div class="login-text">Вход</div>
            <div class="separator"></div>
            <form method="post" asp-controller="Login" asp-action="">
                <div asp-validation-summary="ModelOnly"></div>
                <div>
                    <input asp-for="UserName" placeholder="Введите логин" autocomplete="off">
                </div>

                <div>
                    <input asp-for="Password" placeholder="Введите пароль" autocomplete="off">
                </div>
                <div class="rememberme">
                    <input type="hidden" asp-for="RememberMe" value="false" />
                    <input asp-for="RememberMe" type="checkbox" id="rememberMe" value="true" />
                    <label for="rememberMe">Запомнить?</label>
                </div>
                <div class="sunbit-but">
                    <input type="submit" value="Войти" />
                    <input type="button" value="Регистрация" class="registration-button" onclick="window.location.href='@Url.Action("Index", "Registration")'" />
                </div>
            </form>
        </div>
    </div>
</body>

<link rel="stylesheet" href="~/css/forUser/login.css" asp-append-version="true" />