@model HouYun.ViewModels.forUser.RegisterViewModel
@{
    Layout = null;
}
<body>
    <div class="Login">
        <h2>HouYun</h2>
        <div class="square-container">
            <div class="register-text">Регистрация</div>
            <div class="separator"></div>
            <form method="post" asp-controller="Registration" asp-action="">
                <div asp-validation-summary="ModelOnly"></div>
                <div>
                    <input asp-for="Email" placeholder="Введите email" autocomplete="off">
                    <span asp-validation-for="Email"></span>
                </div>

                <div>
                    <input asp-for="UserName" placeholder="Введите логин" autocomplete="off">
                    <span asp-validation-for="UserName"></span>
                </div>

                <div>
                    <input asp-for="Password" placeholder="Введите пароль" autocomplete="off">
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="sunbit-but">
                    <input type="submit" value="Зарегистрироваться" />
                    <a href="@Url.Action("Index", "Login")"><input type="button" value="Вход" class="enter-button" /></a>
                </div>
            </form>
        </div>
    </div>
</body>

<link rel="stylesheet" href="~/css/Registration.css" asp-append-version="true" />