@model HouYun.Models.Channel
@using System.Security.Claims

@{
    ViewData["Title"] = @Model.Name;
}

<h1 id="Title">@Model.Name</h1>
<p>@Model.Description</p>
<p>@Helper.FormatSubscribers(Model.Subscribers.Count) | @Model.Videos.Count видео</p>
<div>
    @if (User.Identity.IsAuthenticated)
    {
        var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
        var isSubscribed = Model.Subscribers.Any(s => s.UserId == userId);
        var isAuthor = Model.UserId == userId;

        if (isAuthor)
        {
            <p>
                <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                    <button id="btnclickAdd" class="btn btn-outline-secondary btn-sm rounded-pill" type="button" data-toggle="modal" data-target="#upload">Загрузить видео</button>
                    <div class="modal fade" id="upload">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-body" id="modal-bodyAdd"></div>
                            </div>
                        </div>
                    </div>
                    <div class="spacer"></div>
                    <button id="btnclickDelete" class="btn btn-outline-secondary btn-sm rounded-pill" type="button" data-toggle="modal" data-target="#delete">Удалить видео</button>
                    <div class="modal fade" id="delete">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-body" id="modal-bodyDelete"></div>
                            </div>
                        </div>
                    </div>
                    <div class="spacer"></div>
                    <button id="btnclickUpdate" class="btn btn-outline-secondary btn-sm rounded-pill" type="button" data-toggle="modal" data-target="#update">Изменить канал</button>
                    <div class="modal fade" id="update">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-body" id="modal-bodyUpdate"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </p>
        }
        else
        {
            if (!isAuthor)
            {
                if (isSubscribed)
                {
                    <p>
                        <form id="unsubscribeForm" method="post" action="/Subscription/Unsubscribe">
                            <input type="hidden" name="channelId" value="@Model.ChannelId" />
                            <button type="button" class="btn btn-light btn-sm rounded-pill" onclick="unsubscribe()">Отписаться</button>
                        </form>
                    </p>
                }
                else
                {
                    <p>
                        <form id="subscribeForm" method="post" action="/Subscription/Subscribe">
                            <input type="hidden" name="channelId" value="@Model.ChannelId" />
                            <button type="button" class="btn btn-light btn-sm rounded-pill" onclick="subscribe()">Подписаться</button>
                        </form>
                    </p>
                }
            }
        }
    }
</div>


<p>Видео:</p>

<div class="container mt-4">
    <div class="row">
        @foreach (var video in Model.Videos)
        {
            <div class="col-md-3">
                <div class="card video-card">
                    <a href="@Url.Action("Details", "Video", new { videoId = video.VideoId })">
                        <img class="card-img-top poster-image" src="@Url.Content("~/posters/" + video.PosterPath)" alt="Video Poster">
                    </a>
                    <div class="card-body">
                        <h4 class="card-title d-flex justify-content-between">
                            <a href="@Url.Action("Details", "Video", new { videoId = video.VideoId })">@video.Title</a>
                            <div class="dropdown">
                                <button id="dropdownButton" onclick="toggleMenu('@video.VideoId')" class="btn btn-outline-secondary btn-sm" aria-haspopup="true" aria-expanded="false">
                                    ...
                                </button>
                                <div id="menuItems_@video.VideoId" class="dropdown-menu" style="display: none;">
                                    <a class="dropdown-item" href="@Url.Action("AddToWatchLater", "WatchLater", new { videoId = video.VideoId })">Смотреть позже</a>
                                </div>
                            </div>
                        </h4>
                        <p class="card-text">
                            <a href="@Url.RouteUrl("channel", new { channelName = video.Channel.Name })">@video.Channel.Name</a>
                        </p>
                        <p class="card-text">
                            <a href="@Url.Action("Details", "Video", new { videoId = video.VideoId })">@Helper.FormatViews(video.Views.Count) | @Helper.TimeAgo(video.UploadDate)</a>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#btnclickAdd").click(function () {
            $.get('@Url.Action("Add", "Channel")', function (data) {
                $("#modal-bodyAdd").html(data);
                $("#upload").modal('show');
            });
        });

        $("#HidebtnModal").click(function () {
            $("#upload").modal('hide');
        });
    });
</script>

<script>
    $(document).ready(function () {
        $("#btnclickDelete").click(function () {
            $.get('@Url.Action("Delete", "Channel")', function (data) {
                $("#modal-bodyDelete").html(data);
                $("#delete").modal('show');
            });
        });

        $("#HidebtnModal").click(function () {
            $("#delete").modal('hide');
        });
    });
</script>

<script>
    $(document).ready(function () {
        $("#btnclickUpdate").click(function () {
            $.get('@Url.Action("Update", "Channel")', function (data) {
                $("#modal-bodyUpdate").html(data);
                $("#update").modal('show');
            });
        });

        $("#HidebtnModal").click(function () {
            $("#update").modal('hide');
        });
    });
</script>

<script>
    function subscribe() {
        document.getElementById("subscribeForm").submit();
    }

    function unsubscribe() {
        document.getElementById("unsubscribeForm").submit();
    }
</script>
