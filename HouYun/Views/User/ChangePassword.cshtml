@model HouYun.ViewModels.forUser.ChangePasswordViewModel
@{
    ViewBag.Title = "Изменение пароля";
}
<h2>HouYun</h2>
<form method="post" asp-controller="user" asp-action="ChangePassword" class="custom-form">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="back-button-container">
        <a class="back-button" asp-controller="Video" asp-action="">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 5L4 12M4 12L12 19M4 12L21 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
        </a>
    </div>

    <div>
        <input asp-for="NewPassword" placeholder="Новый пароль" autocomplete="off">
    </div>

    <div>
        <input asp-for="OldPassword" placeholder="Старый пароль" autocomplete="off">
    </div>

    <div class="sunbit-but">
        <input type="submit" value="Изменить пароль" />
    </div>

</form>

<link rel="stylesheet" href="~/css/ChangePassword.css" asp-append-version="true" />
