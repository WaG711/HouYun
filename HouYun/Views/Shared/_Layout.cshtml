<!DOCTYPE html>
<html lang="en">
@using Microsoft.AspNetCore.Identity
@using HouYun.IRepositories
@using System.Security.Claims
@inject SignInManager<User> _signInManager;
@inject IUserRepository UserRepository
@{
    var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
    var username = await UserRepository.GetUsernameById(userId);
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header id="myHeader">
        <nav class="navbar">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Video" asp-action="Index"
                   asp-route-category=@null>HouYun</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (_signInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <form method="post" asp-action="Logout" asp-controller="User">
                                    <button type="submit" class="nav-link btn btn-link py-0" style="width:auto">
                                        Logout @username!
                                    </button>
                                </form>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-action="ChangePassword" asp-controller="User">
                                    <button type="sumbit" class="nav-link btn btn-link py-0" style="width:auto">
                                        Change Password
                                    </button>
                                </form>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-action="ChangeUsername" asp-controller="User">
                                    <button type="submit" class="nav-link btn btn-link py-0" style="width:auto">
                                        Change Username
                                    </button>
                                </form>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-action="Index" asp-controller="Channel">
                                    <button type="submit" class="nav-link btn btn-link py-0" style="width:auto">
                                        My Channel
                                    </button>
                                </form>
                            </li>

                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <form method="post" asp-action="Index" asp-controller="AdminPanel">
                                        <button type="submit" class="nav-link btn btn-link py-0" style="width:auto">
                                            Admin Panel
                                        </button>
                                    </form>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <p class="card-text">
                                    <a href="@Url.RouteUrl("registration", new {index="Index"})">Registration</a>
                                </p>
                            </li>
                            <li class="nav-item">
                                <p class="card-text">
                                    <a href="@Url.RouteUrl("login", new {index="Index"})">Login</a>
                                </p>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

